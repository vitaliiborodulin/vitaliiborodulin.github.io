- var articleLink   = '2019-12-18-7-primerov-ispolzovaniya-kastomnyh-css-svojstv.html'
- var imgPath       = 'assets/img/articles/2019-12-18/top-picture.jpg'
- var imgAlt        = 'Custom properties'
- var articleTitle  = 'Семь примеров использования кастомных CSS-свойств'
- var articleDate   = '2019-12-09'
- var articleWriter = 'Michelle Barker'
- var articleDescr  = 'Кастомные свойства (которые также известны как CSS переменные) позволяют нам хранить значения свойств для их последующего переиспользования в наших таблицах стилей. Если вы недавно узнали про них, то можете задаваться вопросом, а чем они лучше обычных переменных препроцессора (если вы конечно используете какой-либо препроцессор).'

// *** don't forget to fix hashtags! ***

//begin 2019-12-18
.blog__article.blog-article
  a(href= articleLink).blog-article__img
    img(src= imgPath alt= imgAlt)
  .blog-article__info
    a(href= articleLink).blog-article__title #{articleTitle}
    .blog-article__info-header
      .blog-article__date(title='Date of publication of the original article')
        +svg('calendar')
        time(datetime= articleDate) #{articleDate}
      .blog-article__author(title='The author of the article')
        +svg('writer')
        span #{articleWriter}
    a(href= articleLink).blog-article__preview
      p #{articleDescr}
    .blog-article__tags
      .blog-article__tag #css
      .blog-article__tag #custom properties
//end 2019-12-18