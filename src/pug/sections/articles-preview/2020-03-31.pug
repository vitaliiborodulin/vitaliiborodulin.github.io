- var articleLink   = '2020-03-31-razmeshenie-teksta-po-zadannoj-traektorii-s-pomoshyu-css.html'
- var imgPath       = 'assets/img/articles/2020-03-31/top-img.jpg'
- var imgAlt        = 'circle text'
- var articleTitle  = 'Размещение текста по заданной траектории с помощью CSS'
- var articleDate   = '2020-03-31'
- var articleWriter = 'Michelle Barker'
- var articleDescr  = 'В этой статье будем разбираться со свойством offset-path, разместим текст по заданной нами траектории и анимируем его.'

//- *** don't forget to fix hashtags! ***

//begin 2020-03-26
.blog__article.blog-article
  a(href= articleLink).blog-article__img
    img(src= imgPath alt= imgAlt)
  .blog-article__info
    a(href= articleLink).blog-article__title #{articleTitle}
    .blog-article__info-header
      .blog-article__date
        +svg('calendar')
        time(datetime= articleDate) #{articleDate}
      .blog-article__author(title='The author of the article')
        +svg('writer')
        span #{articleWriter}
    a(href= articleLink).blog-article__preview
      p #{articleDescr}
    .blog-article__tags
      .blog-article__tag #css
      .blog-article__tag #custom properties
      .blog-article__tag #animation
//end 2020-03-26