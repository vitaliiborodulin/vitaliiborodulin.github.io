.works__item.works-item
  .works-item__img
    img(src="assets/img/works/conews.jpg" alt="Cosmetology News")
    a(href="https://newscosmetology.com/" target="_blank" rel="nofollow noopener noreferrer").works-item__img-more
      +svg('magnific')
      span view site
  .works-item__info
    h3.works-item__title Cosmetology News
    .works-item__date
      +svg('calendar')
      time(datetime='2021-06') june 2021
    a(href="https://newscosmetology.com/" target="_blank" rel="nofollow noopener noreferrer").works-item__link
      +svg('link')
      span newscosmetology.com
    .works-item__btns
      .works-item__btn html
      .works-item__btn less
      .works-item__btn smartgrid
      .works-item__btn js/jquery
      .works-item__btn wordpress
