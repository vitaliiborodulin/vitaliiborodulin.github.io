.works__item.works-item
  .works-item__img
    img(src="assets/img/works/digitacrea.jpg" alt="Digitacrea")
    a(href="https://digitacrea.art/" target="_blank" rel="nofollow noopener noreferrer").works-item__img-more
      +svg('magnific')
      span view site
  .works-item__info
    h3.works-item__title Digitacrea Art
    .works-item__date
      +svg('calendar')
      time(datetime='2020-11') november 2020
    a(href="https://digitacrea.art/" target="_blank" rel="nofollow noopener noreferrer").works-item__link
      +svg('link')
      span https://digitacrea.art/
    .works-item__btns
      .works-item__btn smartgrid
      .works-item__btn js/jquery
